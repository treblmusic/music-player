<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.kabouzeid.trebl.com.trebl.gramophone.ui.fragments.mainactivity.library.pager.MoreFragment">

    <TextView
        android:id="@+id/tv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/semiboldfont"
        android:textSize="15dp"
        android:alpha="0.5"
        android:textColor="?android:textColorPrimary"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settingsButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_more"
        >

        <ImageView
            android:id="@+id/iv_settings"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="8dp"
            android:src="@drawable/ic_settings_white_24dp"
            android:tint="?textColor"
            android:background="@drawable/settings_button_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/iv_settings"
            app:layout_constraintTop_toTopOf="@id/iv_settings"
            app:layout_constraintBottom_toBottomOf="@id/iv_settings"
            android:text="Settings and info"
            android:fontFamily="@font/regularfont"
            android:textColor="?textColor"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:tint="?android:textColorSecondary"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@id/iv_settings"
            app:layout_constraintBottom_toBottomOf="@id/iv_settings"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/foldersButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settingsButton"
        >

        <ImageView
            android:id="@+id/iv_folders"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="8dp"
            android:src="@drawable/ic_folder_white_24dp"
            android:tint="?textColor"
            android:background="@drawable/settings_button_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/iv_folders"
            app:layout_constraintTop_toTopOf="@id/iv_folders"
            app:layout_constraintBottom_toBottomOf="@id/iv_folders"
            android:text="Folders"
            android:fontFamily="@font/regularfont"
            android:textColor="?textColor"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:tint="?android:textColorSecondary"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@id/iv_folders"
            app:layout_constraintBottom_toBottomOf="@id/iv_folders"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/scanButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/foldersButton"
        >

        <ImageView
            android:id="@+id/iv_scan"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="8dp"
            android:src="@drawable/ic_scanner_white_24dp"
            android:tint="?textColor"
            android:background="@drawable/settings_button_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Scan Media"
            android:fontFamily="@font/regularfont"
            android:textColor="?textColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_scan"
            app:layout_constraintTop_toTopOf="@id/iv_scan" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:tint="?android:textColorSecondary"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@id/iv_scan"
            app:layout_constraintBottom_toBottomOf="@id/iv_scan"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/trebl_logo_full"
        android:tint="?materialSecondary"
        android:layout_marginBottom="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scanButton"
        android:fontFamily="@font/semiboldfont"
        android:textSize="15dp"
        android:alpha="0.5"
        android:visibility="gone"
        android:textColor="?android:textColorPrimary"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/customButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_pro"
        >

        <ImageView
            android:id="@+id/iv_custom"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:src="@drawable/rounded_rectangle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?textColor"
            android:text="GO PRO"
            android:fontFamily="@font/boldfont"
            app:layout_constraintStart_toStartOf="@id/iv_custom"
            app:layout_constraintEnd_toEndOf="@id/iv_custom"
            app:layout_constraintTop_toTopOf="@id/iv_custom"
            app:layout_constraintBottom_toBottomOf="@id/iv_custom"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
